<Window x:Class="SpeakUP_1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeakUP_1"
        mc:Ignorable="d"
        Title="Login" Height="270" Width="410"
        ResizeMode="NoResize">
    <Grid>
        <Image Margin="7,10,0,77" Source="/Rectangle 1 (1).png" Stretch="Fill"/>
        <Label x:Name="L_ByMe" Content="Расскажите о себе:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0" FontWeight="Bold" FontSize="16" Foreground="White"/>
        <TextBox x:Name="TB_Me" HorizontalAlignment="Left" Margin="14,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="376" Height="82" TextChanged="TextBox_TextChanged" Text="&gt;Сколько лет&#xD;&#xA;&gt;Как зовут&#xD;&#xA;&gt;Если обучаетесь, то на каком курсе&#xD;&#xA;&gt;Какие проблемы вы видите в своем ораторстве на данный момент&#xD;&#xA;" UndoLimit="10000" SelectionOpacity="-2" GotFocus="TB_Me_GotFocus" Background="{x:Null}" Foreground="White" FontWeight="Bold" BorderBrush="{x:Null}"/>
        <Image x:Name="Save" Margin="0,0,0,6" Source="/Component 1 (1).png" Stretch="UniformToFill" MouseDown="Save_MouseDown" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="260" Height="70"/>


    </Grid>
</Window>
